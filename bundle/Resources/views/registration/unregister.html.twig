{% trans_default_domain "ezmailing" %}
{% extends pagelayout %}

{% block content %}
    {% if form is defined %}
        {{ form_start(form) }}
        {{ form_row(form.user) }}
        {% if not unsubscribeAll %}
            <div style="display: none">
        {% endif %}
        {{ form_row(form.mailingLists) }}
        {% if not unsubscribeAll %}
            </div>
        {% endif %}
        <input type="submit" value="Unregister" name="Unregister"/>
        {{ form_end(form) }}
    {% else %}
        <p>{{ "register.unregister.confirmation_email_message"|trans }}</p>
    {% endif %}
{% endblock %}
