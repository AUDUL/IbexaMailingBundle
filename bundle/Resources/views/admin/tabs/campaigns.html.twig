{% trans_default_domain 'ibexamailing' %}
<p>{{"tabs.campaigns.part_of_count1"|trans}} {{ items|length }} {{"tabs.campaigns.part_of_count2"|trans}}</p>

{% for item in items %}
    <div class="ez-table-header">
        <div class="ez-table-header__headline">
            <img src="{{ asset("/bundles/ibexamailing/admin/images/32x32/campaign.svg") }}" class="mailing-icon"/>

            {{ item.name }} - {{ item.mailings|length }} {{"tabs.campaigns.mailings"|trans}}
        </div>
    </div>
    <div class="ibexamailing-ez-mailings-view">
        {% include "@IbexaMailing/admin/common/list/mailings.html.twig" with { withTitle: false, items: item.mailings} only %}
    </div>
{% endfor %}
