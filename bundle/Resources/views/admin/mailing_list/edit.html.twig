{% extends '@IbexaMailing/admin/layout/pagelayout.html.twig' %}
{% trans_default_domain 'ibexamailing' %}

{% form_theme form with ['@ibexadesign/ui/form_fields.html.twig', _self ] %}

{% block _mailing_list_names_entry_label %}
    <label class="form-control-label ibexa-label">{{"mailing_list.edit.name"|trans}} {{ name }}</label>
{% endblock %}

{% block ibexamailing_breadcrumb %}
    {% set items = [
        {'url':path("ibexamailing_dashboard_index"), 'value': 'Ibexa MailingRepository' },
        {'value': "campaign.breadcrumb.mailing_lists"|trans },
        {'value':  item.name },
        {'value': "campaign.breadcrumb.edit"|trans },
    ] %}

    {% include '@ibexadesign/ui/breadcrumbs.html.twig' with { items: items } %}
{% endblock %}
{% block ibexamailing_title %}{{ "mailing_list.edit.title"|trans }} {{ item.name }}{% endblock %}
{% block ibexamailing_subtitle %}{{ "mailing_list.edit.subtitle"|trans }}{% endblock %}
{% block content %}
    {{ form_start(form, {attr: {class:'col-11', ibexamailing:'mainform'}}) }}
    {{ form(form) }}
    {{ form_end(form) }}
{% endblock %}
{% block rightbar %}
    {% set sidebar_right = knp_menu_get('ibexamailing.menu.save_cancel', []) %}
    {{ knp_menu_render(sidebar_right, {'template': '@ibexadesign/ui/menu/context_menu.html.twig'}) }}
{% endblock %}
