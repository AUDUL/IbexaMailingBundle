{% extends '@NovaeZMailing/admin/layout/pagelayout.html.twig' %}
{% trans_default_domain 'ezmailing' %}

{% form_theme form with ['@ibexadesign/content/form_fields.html.twig', _self ] %}

{% block _mailing_list_names_entry_label %}
    <label class="form-control-label">{{"mailing_list.edit.name"|trans}} {{ name }}</label>
{% endblock %}

{% block novezmailing_breadcrumb %}
    {% set items = [
        {'url':path("novaezmailing_dashboard_index"), 'value': 'Nova eZ Mailing' },
        {'value': "campaign.breadcrumb.mailing_lists"|trans },
        {'value':  item.name },
        {'value': "campaign.breadcrumb.edit"|trans },
    ] %}

    {% include '@ibexadesign/ui/breadcrumbs.html.twig' with { items: items } %}
{% endblock %}
{% block novezmailing_title %}{{"mailing_list.edit.title"|trans}} {{ item.name }}{% endblock %}
{% block novezmailing_subtitle %}{{"mailing_list.edit.subtitle"|trans}}{% endblock %}
{% block content %}
    {{ form_start(form, {attr: {class:'col-11', novaezmailing:'mainform'}}) }}
    {{ form(form) }}
    {{ form_end(form) }}
{% endblock %}
{% block rightbar %}
    {% set sidebar_right = knp_menu_get('novaezmailing.menu.save_cancel', []) %}
    {{ knp_menu_render(sidebar_right, {'template': '@ibexadesign/ui/menu/context_menu.html.twig'}) }}
{% endblock %}
