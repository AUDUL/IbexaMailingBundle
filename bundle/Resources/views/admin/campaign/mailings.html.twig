{% extends '@NovaeZMailing/admin/layout/pagelayout.html.twig' %}
{% trans_default_domain 'ezmailing' %}

{% block novezmailing_breadcrumb %}
    {% set items = [
        {'url':path("novaezmailing_dashboard_index"), 'value': 'Nova eZ Mailing' },
        {'value': "campaign.breadcrumb.campaigns"|trans },
        {'value':  item.name },
        {'value': "campaign.breadcrumb.mailings"|trans },
    ] %}

    {% include '@ibexadesign/ui/breadcrumbs.html.twig' with { items: items } %}
{% endblock %}
{% block novezmailing_title %}
    <img src="{{ asset("/bundles/novaezmailing/admin/images/32x32/campaign.png") }}" class="nova-icon"/> {{ item.name }}{% endblock %}
{% set subtitle = "campaign.mailings.campaign"|trans %}
{% block novezmailing_subtitle %}{{ subtitle }}{% endblock %}
{% block content %}
    {{ render_esi(controller("Novactive\\Bundle\\eZMailingBundle\\Controller\\Admin\\CampaignController::campaignTabsAction", {campaign: item.id, status: status})) }}
{% endblock %}
